<div class="section2_fifrstdiv container  justify-content-center">
    <div class="instruction_div">Use the form below to create new user</div>
    <form method="POST" id="add_user">
     <div class="form-group">
        <label for="Name" class="text-secondary ">Name</label>
        <input type="text" value="" name="Name" placeholder="enter name">
     </div>
     <div class="form-group">
        <label for="Name" class="text-secondary ">Email</label>
        <input type="text" value="" name="Name" placeholder="example@gmail.com">
     </div>
     <div class="form-group">
        <label for="Name" class="text-secondary ">Phone</label>
        <input type="text" value="" name="Name" placeholder="Phone">
     </div>
     <!-- gender -->
     <div class="form-group Gender-form">
        <label for="Gender" class="gender-label">Gender</label>
        <input type="radio" name="Gender" value="male">
        <label for="male">male</label>
        
        <input type="radio" name="Gender" value="female">
        <label for="female">female</label>
     </div>
     <!-- status -->
     <div class="form-group Status-form">
        <label for="Status" class="Status-label">Status</label>
        <input type="radio" name="Status" value="active">
        <label for="active">active</label>
        
        <input type="radio" name="Status" value="inactive">
        <label for="inactive">inactive</label>
     </div>
     <div class="form-group">
        <button type="submit" class="btn btn-primary">save</button>
     </div>
    </form>
    
</div>